<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_main_card_margin"
    android:layout_marginBottom="@dimen/activity_main_card_margin"
    android:layout_marginStart="@dimen/activity_main_card_margin"
    android:layout_marginEnd="@dimen/activity_main_card_margin"
    card_view:cardCornerRadius="@dimen/activity_main_card_cardCornerRadius"
    card_view:cardElevation="@dimen/activity_main_card_cardElevation"
    card_view:cardUseCompatPadding="true">

    <include layout="@layout/activity_main_card"/>

</androidx.cardview.widget.CardView>
