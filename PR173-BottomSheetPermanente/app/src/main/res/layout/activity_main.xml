<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="es.iessaladillo.pedrojoya.pr173.ui.main.MainActivity">

    <include layout="@layout/activity_main_content"/>

    <include
            android:id="@+id/rlPanel"
            layout="@layout/activity_main_bottom_sheet"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_main_fab_margin"
            android:src="@drawable/ic_search_white_24dp"
            app:layout_anchor="@+id/rlPanel"
            app:layout_anchorGravity="top|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
