<?xml version="1.0" encoding="utf-8"?>
<manifest package="es.iessaladillo.pedrojoya.pr097"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.save.SaveActivity"
            android:label="@string/save_label"
            android:parentActivityName=".ui.main.MainActivity">
        </activity>
        <activity
            android:name=".ui.retain.RetainActivity"
            android:label="@string/retain_label"
            android:parentActivityName=".ui.main.MainActivity">
        </activity>
        <activity
            android:name=".ui.state.AndroidStateActivity"
            android:label="@string/state_label"
            android:parentActivityName=".ui.main.MainActivity">
        </activity>
        <activity
            android:name=".ui.viewmodel.ViewModelActivity"
            android:label="@string/viewmodel_label"
            android:parentActivityName=".ui.main.MainActivity"/>
    </application>

</manifest>