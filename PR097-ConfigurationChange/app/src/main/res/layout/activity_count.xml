<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/general_activity_padding"
    tools:context=".RetainActivity">

    <TextView
        android:id="@+id/lblCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/general_vertical_margin"
        style="@style/TextAppearance.AppCompat.Display4"/>

    <Button
        android:id="@+id/btnIncrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/general_vertical_margin"
        android:text="@string/activity_count_btnIncrement"/>

</RelativeLayout>