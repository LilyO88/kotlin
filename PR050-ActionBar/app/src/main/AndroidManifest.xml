<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="es.iessaladillo.pedrojoya.pr050" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="es.iessaladillo.pedrojoya.pr050.ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.iessaladillo.pedrojoya.pr050.ui.preferences.PreferencesActivity"
            android:label="@string/activity_preferences_title"
            android:parentActivityName="es.iessaladillo.pedrojoya.pr050.ui.main.MainActivity">
        </activity>
    </application>

</manifest>